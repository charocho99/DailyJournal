<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= startingContent %> </p>
<% posts.forEach(function(post){ %> 
    <h2><%=post.title %> </h2>
    <% if(post.content.length<=100){ %> 
        <p><%= post.content %>  </p>
    <% }else{ %> 
        <p><%= post.content.slice(0,97)+"..." %><a href="/posts/<%= post._id %> ">Read More.</a> </p>
    <% } %> 
<% }) %> 

<%- include('partials/footer'); -%>

